<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounds"
    android:orientation="vertical">
 <!--   <include layout="@layout/gold_bottom"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gold_revenue"
            android:text="@string/income"
            android:textSize="26px"
            android:paddingLeft="41px"
            android:paddingRight="20px"
            android:paddingTop="15px"
            style="@style/textViewStyle"/>

        <TextView
            android:id="@+id/gold_exchange"
            android:paddingTop="15px"
            android:textSize="26px"
            android:layout_marginLeft="12px"
            android:paddingLeft="20px"
            android:paddingRight="41px"
            android:textColor="@color/no_finsh_text"
            android:text="@string/exchange"
            style="@style/textViewStyle"/>
    </LinearLayout>

    <!--<View
        android:id="@+id/view1"
        android:layout_width="76px"
        android:layout_marginTop="5px"
        android:layout_marginLeft="30px"
        style="@style/horizontal_lines"/>-->
    <com.xxun.view.RedCursorView
        android:layout_marginLeft="30px"
        android:layout_marginTop="5px"
        android:layout_marginRight="30px"
        android:id="@+id/red_view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>



    <com.xxun.view.CustomScrollViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
    </com.xxun.view.CustomScrollViewPager>

</LinearLayout>
