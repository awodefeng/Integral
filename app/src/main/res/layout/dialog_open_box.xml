<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/backgrounds"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/openbox"
        android:layout_marginLeft="64px"
        android:layout_width="113px"
        android:layout_marginTop="31px"
        android:layout_height="138px"/>

    <TextView
        android:id="@+id/tv_openbox_gold"
        android:layout_width="128px"
        android:layout_height="44px"
        android:textSize="22px"
        android:layout_marginLeft="80px"
        android:layout_marginTop="65px"
        android:textColor="@color/white"
        android:text="@string/randowecp"/>
    </FrameLayout>


    <LinearLayout
        android:layout_marginTop="26px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_marginLeft="10px"
            android:layout_width="106px"
            android:layout_height="44px"
            android:src="@drawable/cancel"/>
        <ImageView
            android:id="@+id/iv_share"
            android:layout_marginLeft="8px"
            android:layout_width="106px"
            android:layout_height="44px"
            android:src="@drawable/share"/>

    </LinearLayout>




</LinearLayout>