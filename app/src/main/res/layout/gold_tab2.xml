<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/backgrounds"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/lv_exchange"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/mo_gold_exchange"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:textSize="26px"
        android:layout_marginLeft="42px"
        android:layout_marginTop="24px"
        android:textColor="@color/white"
        android:text="@string/exhange_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/go_exchange"
        android:layout_marginLeft="10px"
        android:layout_marginTop="59px"
        android:layout_width="220px"
        android:layout_height="44px"
        android:src="@drawable/toexchange"/>

    </LinearLayout>
</LinearLayout>